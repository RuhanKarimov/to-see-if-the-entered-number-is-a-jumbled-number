#include<stdio.h>

int main()
{
	int x,y,c,b,L=0,K=0;
	long number,number1,number2;
	printf("Enter a number:");
	scanf("%d",&number);
	
	number1=number;
	while(number1!=0)
	{
		x=number1%10;
		
		if(number1>=10)
		{
			number1=number1/10;
		}
		else
		{
			number1=0; break;
		}
		
		y=number1%10;
		
		c=x-y;
		b=y-x;
		
		if(c!=1 && c!=0 && b!=1 && b!=0)
		{
			L=1;
			break;
		}
	}
	
	number2=number;
	while(number2!=0)
	{
		x=number2%10;
		
		y=number2%10;
		
		c=x-y;
		b=y-x;
		
		if(c!=1 && c!=0 && b!=1 && b!=0)
		{
			K=1;
			break;
		}
		if(number2>10)
		{
			number2=number2/10;
		}
		else
		{
			number2=0; break;
		}
	}
	
	if(K==0 && L==0)
	{
		printf("The entered number is a jumbled number");
	}
	else
	{
		printf("The entered number is not a Jumbled number");
	}
	return 0;
}
